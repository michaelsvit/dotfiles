{
	"extends": [
		"airbnb",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"env": {
		"node": true
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error"
		],
		"no-plusplus": 0,
		"no-use-before-define": [ 2, { "functions": false } ],
		"no-param-reassign": 0
	}
}
